{
  "$schema": "https://railway.app/railway.schema.json",
  "name": "metanoia-spa",
  "vars": {
    "NPM_CONFIG_CACHE": "/tmp/.npm",
    "CI": "true"
  },
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --no-fund --no-audit && npm run build",
    "watchPaths": [
      "src/**",
      "public/**",
      "package.json",
      "astro.config.mjs",
      "tailwind.config.mjs"
    ]
  },
  "deploy": {
    "startCommand": "npx --yes serve -s dist -l $PORT",
    "numReplicas": 1,
    "sleepApplication": false
  }
}
